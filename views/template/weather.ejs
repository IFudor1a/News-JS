<h2>Weather</h2>
<div class="card"id="weather_container" style="text-align:left">
  <div class="app-wrap" style="background:url(images/bg.jpg);">
   <header>
     <input type="text" autocomplete="off" class="search-box" placeholder="Search for a city..." />
   </header>
   <main>
     <section class="location">
       <div class="city"><%=`${weather.name}, ${weather.sys.country}`%></div>
       <div class="date">Thursday 15 January 2021</div>
     </section>
     <div class="current">
       <div class="temp"><%=`${Math.round(weather.main.temp)}°C`%></div>
       <div class="weather"><%=weather.weather[0].description%></div>
       <div class="hi-low"><%=`${Math.round(weather.main.temp_min)}°C`%>/ <%=`${Math.round(weather.main.temp_max)}°C`%></div>
     </div>
   </main>
 </div>
